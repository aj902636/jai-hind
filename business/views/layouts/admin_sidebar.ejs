                    <!--<i class="mdi mdi-bullhorn fa-fw" data-icon="v"></i>-->
                    <!--<span class="hide-menu"> Advertisement <span class="fa arrow"></span> </span>-->
                <!--</a>-->
            <!--</li>-->
            <li> <a href="/users" class="waves-effect <% if(title == 'users'){ %> active <% }%> "><i class="mdi mdi-account-multiple fa-fw"
                        data-icon="v"></i>
                    <span class="hide-menu"> <%= LANG.UsersDemographics %><span class="fa arrow"></span> </span></a>
            </li>
            <li> <a href="/reports" class="waves-effect <% if(title == 'reports'){ %> active <% }%> ">
                    <i class="mdi mdi-alert fa-fw" data-icon="v"></i>
                    <span class="hide-menu"> <%= LANG.Complain %><span class="fa arrow"></span> </span></a>
            </li>
            <li> <a href="/payment/membership" class="waves-effect <% if(title == 'membership'){ %> active <% }%> ">
                <i class=" ti-wallet fa-lg fa-fw" data-icon="v"></i>
                <span class="hide-menu"> <%= LANG.Membership %> <span class="fa arrow"></span> </span></a>
              </li>
            <li> <a href="/finance" class="waves-effect <% if(title == 'finance'){ %> active <% }%> ">
                    <i class=" ti-wallet fa-lg fa-fw" data-icon="v"></i>
                    <span class="hide-menu"> <%= LANG.Finance %> <span class="fa arrow"></span> </span></a>
