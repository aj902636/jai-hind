<% layout('layouts/admin') %>
<div class="container-fluid">
	<div class="row bg-title">
		<div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
			<h4 class="page-title">Edit Advertisement</h4>
		</div>
		<div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
			<ol class="breadcrumb">
				<li><a href="/dashboard">Dashboard</a></li>
				<li><a href="#">Edit Advertisement</a></li>
			</ol>
		</div>
		<!-- /.col-lg-12 -->
	</div>
	<div class="white-box">
		<div class="row">
			<div class="col-xs-12">
				<div class="box">
					<div class="box-body target ">
						<form data-toggle="validator" id="form_validation" action="/ads/updateAds/<%= adsInfo.id %>" method="POST" class="col-xs-10">
							<div class="form-group form-float">
								<label class="form-labedealsl required ">Title <sup> * </sup></label>
								<div class="form-line ">
									<input class="form-control" placeholder="Ads Title" id="inputName1" value="<%= adsInfo.title %>" name="title"
									 type="text" required>
								</div>
								<div class="help-block with-errors"></div>
							</div>
							<div class="form-group form-float">
								<label class="form-labedealsl required ">Links<sup> * </sup>
								</label>
								<div class="form-line ">
									<input class="form-control" placeholder="http://example.com" id="inputName1" value="<%= adsInfo.link %>" name="link"
									 type="url" required>
								</div>
								<div class="help-block with-errors"></div>
							</div>
							<div class="form-group form-float">
								<label class="form-labedealsl required ">Duration <sup> * </sup></label>
								<div class="form-line ">
									<select name="duration" class="form-control" required>
										<option value="">-- Select Duration --</option>
										<option value="1" <%=adsInfo.duration==1 ?'selected' :'' %>>1 hours</option>
										<option value="2" <%=adsInfo.duration==2 ?'selected' :'' %>>2 hours</option>
										<option value="3" <%=adsInfo.duration==3 ?'selected' :'' %>>3 hours</option>
										<option value="24" <%=adsInfo.duration==24 ?'selected' :'' %>>24 hours</option>
									</select>
								</div>
								<div class="help-block with-errors"></div>
							</div>
							<br>
							<br>
							<br>
							<div class="form-group text-right">
								<button class="btn btn-primary waves-effect" type="submit">SUBMIT</button>
								<a href="/ads" class="btn btn-primary waves-effect">BACK</a>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>