      <form name="inquiryForm" id="inquiryForm" method="post">
        <input type="hidden" value="<%=lang%>" name="lang">
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <input type="text" name="fullname" id="fullname" class="form-control required" placeholder="<%=LANG.FullName %>">
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <input type="email" name="email" id="email"  class="form-control required " placeholder="<%=LANG.Email %> ">
            </div>
          </div>
          <div class="col-sm-12">
            <div class="form-group">
              <textarea name="message" id="fullname"  class="form-control required" placeholder="<%=LANG.Message %> "></textarea>
            </div>
          </div>
          <div class="col-sm-12">
            <div class="alert"  id="showMsg">
                <div></div>
            </div>
          </div>
          <div class="col-sm-12 mT10">
            <div class="text-center">
              <button class="defultBtn"><%=LANG.Submit %></button>
            </div>
          </div>
        </div>
      </form>
    </div>
  </section>

