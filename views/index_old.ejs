  <script>
  $(function () {
    $("#inquiryForm").validate({
      errorPlacement: function (error, element) {
      },
      submitHandler: function(form) {
        $("#showMsg").removeClass("alert-success, alert-danger");
        $.ajax({
            url: "/send_inquiry",
            type: "POST",
            data: $(form).serialize(),
            dataType: 'json',
            cache: false,
            processData: false,
            beforeSend: function(){
              $(".defultBtn").attr("disabled",true);
            },
            success: function (result) {
              if(result.status){
                $("#showMsg").show().addClass("alert-success");
                $("#showMsg div").text(result.message);
                setTimeout(function(){ $("#showMsg").hide(); }, 3000);
                $("#inquiryForm")[0].reset();
              }else{
                $("#showMsg").show().addClass("alert-danger");
                $("#showMsg div").text(result.message);
                setTimeout(function(){ $("#showMsg").hide(); }, 3000);
              }
              $(".defultBtn").attr("disabled",false);
            },
            error: function (e) {
              $("#showMsg").show().addClass("alert-danger");
              $("#showMsg div").text('Something went wrong. please page refresh and try again.');
              setTimeout(function(){ $("#showMsg").hide(); }, 3000);
            }
        });
        return false;
    },

    });
    $('.dropdown-item').on('click', function () {
    var url = $(this).data('value'); // get selected value
    if (url) { // require a URL
        window.location = '/'+url; // redirect
    }
    return false;
    });
    $('.carousel').carousel({
      interval: 2000
    })
  });
  </script>



