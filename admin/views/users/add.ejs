<% layout('layouts/admin') %>
<div class="container-fluid">
    <div class="row bg-title">
        <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
            <h4 class="page-title">Add Category</h4>
        </div>
        <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
            <ol class="breadcrumb">
                <li><a href="/dashboard">Dashboard</a></li>
                <li><a href="#">Add Category</a></li>
            </ol>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="white-box">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <hr class="">
                    <div class="box-body target ">
                        <form data-toggle="validator" id="form_validation" action="/categories/addCat" method="POST"
                            class="col-xs-10" encType="multipart/form-data">
                            <div class="form-group form-float">
                                <label class="form-label required ">Name</label>
                                <div class="form-line ">
                                    <input class="form-control" id="inputName1" name="name" type="text" required>
                                </div>
                            </div>
                            <div class="form-group form-float">
                                <label class="form-label required">Select Icon </label><br>
                                <span class="text-muted">(Please upload image with 30x30 dimension) </span>
                                <div class="form-line">
                                    <input name="foo" id="inputName2" type="file" required class="btn waves-effect"
                                        onchange="readURL(this);" />
                                    <img id="catImg" src="" width="80">
                                </div>
                            </div>
                            <br>
                            <br>
                            <br>
                            <button class="btn btn-primary waves-effect" type="submit">SUBMIT</button>
                            <a href="/categories" class="btn btn-primary waves-effect">BACK</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                $('#catImg').attr('src', e.target.result);
            }
            reader.readAsDataURL(input.files[0]);
        }
    }

</script>