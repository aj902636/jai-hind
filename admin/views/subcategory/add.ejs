<% layout('layouts/admin') %>
<div class="container-fluid">
    <div class="row bg-title">
        <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
            <h4 class="page-title">Add Subcategory</h4>
        </div>
        <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
            <ol class="breadcrumb">
                <li><a href="/dashboard">Dashboard</a></li>
                <li><a href="/subcategories">Manage Subcategories</a></li>
                <li><a href="#">Add Subcategory</a></li>
            </ol>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="white-box">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <hr class="">
                    <div class="box-body target ">
                        <form data-toggle="validator" id="form_validation" action="/subcategories/addCat" method="POST"
                            class="col-xs-10" encType="multipart/form-data">
                            <div class="form-group form-float">
                                <label class="form-label required ">Parent Category <sup> * </sup></label>
                                <div class="form-line ">
                                    <select name="parent_cat" class="form-control" id="parent_cat" required>
                                        <option value="">-- Select Parent Category --</option>
                                        <% cat.forEach(function(row) { %>
                                        <option value=<%=row.id %>>
                                            <%= row.name %>
                                        </option>
                                        <% }); %>
                                    </select>
                                </div>
                                <div class="help-block with-errors"></div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group form-float">
                                        <label class="form-label required ">Name <sup> * </sup></label>
                                        <div class="form-line ">
                                            <input class="form-control" id="inputName1" name="name" type="text" required>
                                        </div>
                                        <div class="help-block with-errors"></div>
                                    </div>
                                </div>
                            </div>
                            
                            
                            <div class="form-group">
                                <label class="control-label">Status</label>
                                <div class="radio-list">
                                    <label class="radio-inline">
                                        <input name="isActive" value="1" type="radio">
                                        Active </label>
                                    <label class="radio-inline">
                                        <input name="isActive" value="0" checked="" type="radio">
                                        Inactive </label>
                                </div>
                            </div>
                            <div class="form-group form-float">
                                <label class="form-label required">Select Icon <sup> * </sup></label><br>
                                <span class="text-muted">(Please upload image with 30x30 dimension) </span>
                                <div class="form-line">
                                    <input name="foo" id="inputName2" type="file" required class=" waves-effect"
                                        onchange="readURL(this);" />
                                    <img id="catImg" src="" width="80">
                                </div>
                                <div class="help-block with-errors"></div>
                            </div>

                            <div class="form-group text-right">
                                <button class="btn btn-danger waves-effect" type="submit">SUBMIT</button>
                                <a href="/subcategories" class="btn btn-danger waves-effect">BACK</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                $('#catImg').attr('src', e.target.result);
            }
            reader.readAsDataURL(input.files[0]);
        }
    }

</script>