<% layout('layouts/admin') %>
<link href="/plugins/bower_components/switchery/dist/switchery.min.css" rel="stylesheet"/>
<div class="container-fluid">
    <div class="row bg-title">
        <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
            <h4 class="page-title">Reports Listing</h4>
        </div>
        <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
            <ol class="breadcrumb">
                <li><a href="/dashboard">Dashboard</a></li>
                <li><a href="#">Reports Listing</a></li>
            </ol>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="white-box">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header row">
                        <h3 class="box-title col-md-9 col-xs-9">Reports Listing</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <div class="table-responsive">
                            <table id="example2"
                                   class="table table-bordered table-hover table-responsive table-striped">
                                <thead>
                                <tr>
                                    <th>TITLE</th>
                                    <th>User Name</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                    <th>MESSAGE</th>
                                    <th>USER ROLE</th>
                                    <th>CREATED ON</th>
                                    <th data-sortable="false">ACTION</th>
                                </tr>
                                <tr class="search_bar">
                                    <td>TITLE</td>
                                    <td>User Name</td>
                                    <td>Email</td>
                                    <td>Phone</td>
                                    <td>MESSAGE</td>
                                    <td>USER ROLE</td>
                                    <td>Created On</td>
                                    <td data-sortable="false"></td>
                                </tr>
                                </thead>
                                <tbody>
                                <% if(storeInfo){ %>    
                                <% storeInfo.forEach(function(value) { %>
                                    <tr>
                                        <td>
                                            <%= value.subject %>
                                        </td>
                                        <td>
                                            <%=value.user.fname+" "+value.user.lname %>
                                        </td>
                                        <td>
                                            <%= value.user.email %>
                                        </td>
                                        <td>
                                            <%= value.user.phone %>
                                        </td>
                                        <td>
                                            <% if(value.message.length > 30) { %>
                                                <%= value.message.substring(0, 30) %>...
                                            <% } else { %>
                                                <%= value.message %>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if(value.user_type == 2) { %>
                                                Business
                                            <% } else { %>
                                                User
                                            <% } %>
                                        </td>
                                        <td>
                                            <%= moment(value.createdAt).format("lll"); %>
                                        </td>
                                        <td>
                                            <a href="/reports/view/<%= value.id %>" title="View Complain"
                                               style="margin-right: 10px">
                                                <button type="button"
                                                        class="btn btn-info btn-outline btn-circle btn-lg m-r-5"><i
                                                            class="ti-eye"></i></button>
                                            </a>
                                            <a href="/reports/resolved/<%= value.id %>"
                                               onclick="return confirm('Are you sure you want to mark resolve this Complain?');"
                                               title="Mark Resolved">
                                                <button type="button" class="btn btn-info btn-outline btn-lg m-r-5"><i
                                                            class="icon-check"></i></button>
                                            </a>
                                        </td>
                                    </tr>
                                <% }) %>
                                <%  }   %>
                                </tbody>
                                <!--<tfoot>
                                    <tr>
                                        <th>Name</th>
                                        <th>icon</th>
                                        <th>Created On </th>
                                        <th data-sortable="false">Action</th>
                                    </tr>
                                </tfoot>-->
                            </table>

                        </div>
                    </div>
                    <!-- /.box-body -->
                </div>
            </div>

            <!-- /.panel-body -->
        </div>
    </div>
</div>
<style>
    #example2_filter {
        display: none;
    }
</style>
<script src="/plugins/bower_components/switchery/dist/switchery.min.js"></script>
<script src="/plugins/bower_components/datatables/datatables.min.js"></script>
<script>
    $(function () {
        var elems = Array.prototype.slice.call(document.querySelectorAll('.js-switch'));
        $('.js-switch').each(function () {
            //new Switchery($(this)[0], $(this).data());
            var switchery = new Switchery($(this)[0], {color: '#ddf004', jackColor: '#fff'});
        });
        $('.js-switch').change(function () {
            var id = $(this).data('id');
            var status = $(this).is(':checked');
            var obj = {id: id};
            obj.status = status;
            var url = "/" + $(this).data('model_id') + '/status';
            console.log("test=====>>>", status, url);

            $.post(url, obj, function (data) {
                if (data) console.log(data);
            });
        });
    });
    $(function () {
        $(document).ready(function () {
            var tab = $('#example2').DataTable({
                "paging": true,
                "bSortCellsTop": true,
                "lengthChange": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "order": [[6, "desc"]],
                "autoWidth": false,
                "responsive": true,
                "columnDefs": [{ type: 'date', 'targets': [6] },
                    {"width": "20%", "targets": 0},
                    {"width": "15%", "targets": 1},
                    {"width": "10%", "targets": 2},
                    {"width": "8%", "targets": 3},
                    {"width": "20%", "targets": 4},
                    {"width": "3%", "targets": 5},
                    {"width": "10%", "targets": 6},
                    {"width": "2%", "targets": 7}
                ]
            });

            $('#example2 thead tr.search_bar td').each(function (value) {
                if (value !== 7) {
                    var title = $(this).text();
                    $(this).html('<input type="text" class="form-control" placeholder="Search by ' + title.toLowerCase() + '" data-index="' + value + '" />');
                }
            });

            $(tab.table().container()).on('keyup change', '.search_bar input', function () {
                tab.column($(this).data('index')).search(this.value).draw();
            });
        });
    });
    $('.buttons-copy, .buttons-csv, .buttons-print, .buttons-pdf, .buttons-excel').addClass('btn btn-primary m-r-10');
</script>